
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSalas.cshtml";
}


<form class="form-horizontal" action='agregar' method="GET" style="padding-top: 200px;">
    <fieldset>
        <div id="legend">
            <legend class="">Register</legend>
        </div>
        <div class="control-group">
            <!-- Nombre -->
            <label class="control-label" for="username">Nombre</label>
            <div class="controls">
                <input type="text" id="Nombre" name="Nombre" placeholder="" class="input-xlarge">
                            </div>
        </div>
        <div class="control-group">
            <!-- Apellido -->
            <label class="control-label" for="username">Apellido</label>
            <div class="controls">
                <input type="text" id="Apellido" name="Apellido" placeholder="" class="input-xlarge">
                
            </div>
        </div>
        <div class="control-group">
            <!-- Username -->
            <label class="control-label" for="username">Usuario</label>
            <div class="controls">
                <input type="text" id="Usuario" name="Username" placeholder="" class="input-xlarge">
                <p class="help-block">Username can contain any letters or numbers, without spaces</p>
                <label class="errorLogin">@ViewBag.MensajeErrorCrearUser</label>
            </div>
        </div>



        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
                <input type="password" id="Password" name="Password" placeholder="" class="input-xlarge">
                <p class="help-block">Password should be at least 4 characters</p>
            </div>
        </div>




        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success">Register</button>
            </div>
        </div>
    </fieldset>
</form>
